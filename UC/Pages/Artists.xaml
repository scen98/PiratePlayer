<UserControl x:Class="PiratePlayer.UC.Pages.Artists"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PiratePlayer.UC.Pages"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:control="clr-namespace:PiratePlayer.UC.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.InputBindings>
        <KeyBinding Command="{Binding RefreshArtistSearch}" Key="W" Modifiers="Ctrl" />
        <KeyBinding Command="{Binding RefreshSongSearch}" Key="S" Modifiers="Ctrl" />
    </UserControl.InputBindings>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="{Binding ExpanderHeight, Mode=OneWay}" />
            <RowDefinition Height="35" />
            <RowDefinition Height="0.6*" />
        </Grid.RowDefinitions>
        <Expander IsExpanded="{Binding IsExpanded, Mode=TwoWay}" Header="Artists" Grid.Row="0" FontSize="20" >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="35" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBox Text="{Binding SearchedArtist, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left" Width="150" />
                <Button Command="{Binding RefreshArtistSearch}" Style="{StaticResource RBtn}"  Grid.Column="0" Grid.Row="0" >
                    <Image Source="/Assets/IMG/refresh.png" />
                </Button>
                <!--<ToggleButton IsChecked="{Binding IsEditVisible, Mode=TwoWay}" Content="Edit" Width="100" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Right" />-->
                <DataGrid ItemsSource="{Binding ArtistList, Mode=OneWay}" SelectedItem="{Binding SelectedArtist, Mode=OneWayToSource}" SelectionMode="Single"  SelectedIndex="{Binding MainGridIndex, Mode=OneWay}" IsReadOnly="True" Margin="20, 0, 20, 00" AutoGenerateColumns="False" Grid.Column="0" Grid.Row="1">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Artist" Binding="{Binding Name}" Width="*" />
                    </DataGrid.Columns>
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseDoubleClick">
                            <i:InvokeCommandAction Command="{Binding StartArtist}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <DataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Play" Command="{Binding StartArtist}" />
                            <MenuItem Header="Export" Command="{Binding Export}" />
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                </DataGrid>
            </Grid>
        </Expander>
        <TextBox Text="{Binding SearchedSong, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontSize="20" Grid.Row="1" HorizontalAlignment="Left" Width="150" />
        <Button Command="{Binding RefreshSongSearch}" Style="{StaticResource RBtn}" Grid.Row="1">
            <Image Source="/Assets/IMG/refresh.png" />
        </Button>
        <control:SongGrid  SongList="{Binding SongList, Mode=OneWay}" SelectedSongs="{Binding SelectedSongs, Mode=OneWayToSource}" Grid.Row="2"  Margin="20, 20, 20, 10"  >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseDoubleClick">
                    <i:InvokeCommandAction Command="{Binding Play}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
            <control:SongGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Play" Command="{Binding Play}" />
                    <MenuItem Header="Put in queue" Command="{Binding PutInQ}" />
                    <MenuItem Header="Add to">
                        <ComboBox ItemsSource="{Binding PlayLists, Mode=OneWay}" SelectedItem="{Binding SelectedPlayList}" DisplayMemberPath="Name" IsEditable="True" Width="100" />
                        <MenuItem Header="Add" Command="{Binding AddtoPlayList}" />
                    </MenuItem>
                    <MenuItem Header="Remove" Command="{Binding RemoveSong}" />
                </ContextMenu>
            </control:SongGrid.ContextMenu>
        </control:SongGrid>
